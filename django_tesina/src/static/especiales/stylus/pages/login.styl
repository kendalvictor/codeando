.wrapper-login
	position relative
	width 100%
	height 100%
	.login-background
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background-color #eee
		background-size cover
	.login-container
		position absolute
		z-index 40
		left 0
		top 0
		height 100%
		display flex
		align-items center
		width 100%
		justify-content center
		.login
			max-width 400px

			&__header
				padding 15px
				background color_white
				border-top-left-radius 8px
				border-top-right-radius 8px
				h2
					text-align center
					color color_white
			&__content
				padding 15px
				background color_white
				border-bottom-left-radius 8px
				border-bottom-right-radius 8px
				#loginform
					display flex
					flex-direction column
					.form-group
						margin-bottom 10px
						margin-top 10px
					a
						text-align right

						margin-bottom 10px
