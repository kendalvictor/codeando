.text--danger

    color color_danger
    transition 0.2s ease all
    &:hover
        color color_danger_darken
.text--close

    color color_close
    transition 0.2s ease all
    &:hover
        color color_close_darken

.text--warning

    color color_warning
    transition 0.2s ease all
    &:hover
