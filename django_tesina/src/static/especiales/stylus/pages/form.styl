.panel
    background color_white
    box-sizing border-box
    box-shadow rgba(0,0,0,0.1) 0px 2px 6px
    .panel__header
        /*background color_sidebar*/

        border-bottom 1px solid color_sidebar
        padding 10px 15px
        h4
            color color_sidebar
    .panel__content
        padding 15px 15px
        form
            margin-bottom 15px



.formBasic

    .form-group

        //margin-bottom 10px
        // input[type="submit"]
        //  width 100%
        textarea
            width 100%
            padding-left 5px
            border-radius 3px
            border 1px solid color_sidebar
            box-sizing border-box

            font-size 13px
            &:focus
                border 1px solid color_success
                outline color_panel
        input[type="text"], input[type="number"], input[type="password"]
            width 100%
            height 28px
            padding-left 5px
            border-radius 3px
            border 1px solid color_sidebar
            box-sizing border-box

            font-size 13px
            &:focus
                border 1px solid color_success
                outline color_panel
        .select2-container
            width 100% !important
        .select2-container .select2-selection--single .select2-selection__rendered
            font-size 14px
        .select2-container--default .select2-selection--single
            border 1px solid color_sidebar

        select

            width 100%
            height 28px
            margin-top 5px
            font-size 13px
            border-radius 3px
            background color_white
            border 1px solid color_sidebar
            option
                margin-top 50px

            &:focus
                border 1px solid color_success
                outline color_panel
        label

            margin-bottom 2px
            display block
            font-size 14px
            color color_sidebar
    .form-fonts
        position relative
        i
            position absolute
            right 10px
            top 0
            font-size 20px
            padding 10px 0px 10px 0px
        input[type="text"], input[type="number"], input[type="password"]
            width 100%
            height 36px
            padding-right 30px
    p.error, span.error
        margin 0
        margin-top 5px
        font-size 13px
        color color_danger
        display block
    .table-content
        margin-top 10px
        overflow-x scroll

        table
            border 1px solid color_sidebar
            border-collapse: collapse
            width: 100%
        input
            // width 100%
            height 23px
            padding-left 5px
            border-radius 3px
            border 1px solid color_sidebar
            box-sizing border-box

            font-size 13px
            &:focus
                border 1px solid color_success
                outline color_panel
        th, td
            text-align: left
            padding: 8px
        td
            border 1px solid color_sidebar
            font-size 12px
            font-family fonts_paragraph
            input[type="checkbox"]
                width 20px
                height 20px
            p
                margin 0
        th
            padding-right 18px
            background-color: color_sidebar
            color: white
            font-family 'lato'
            font-size 14px

        tr
            &:nth-child(even)
                background-color: #f2f2f2

