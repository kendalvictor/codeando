        border-radius 3px
        background color_white
        border 1px solid color_sidebar
// date picker
.datepicker
    z-index 50
.datepicker td.day.disabled
    color #ccc
/*message*/
.message
    padding 10px
    text-align center
    border-radius 4px
    p
        margin 0px
        font-size 15px
.message--danger
    color color_danger_darken
    background #ebccd1
    border 1px solid color_danger_darken
.test
    display none
.pop-up
    transition 0.3s ease all

    display none
    height 100%
    width 100%
    position fixed
    top 0px
    left 0
    z-index 40
    padding 10px
    box-sizing border-box
    align-items center
    right 0
    margin auto
    .pop-up-content-large
        max-width 1400px !important
    .pop-up-content
        margin auto
        margin-top 20px
        width 100%
        max-width 900px

        transition 0.3s ease all
        background color_white
        position relative
        z-index 40
        border-radius 4px
        .pop-up-close
            position absolute
            right 0
            top 0
            cursor pointer
            background color_close
            padding 5px
            .icon-close
                font-size 16px
                color color_white
    .pop-up-content--small
        max-width 600px


.pop-up-active
    display block !important
    .pop-up-content-active
        opacity 1 !important

.message-pop
    transition 0.3s ease all
    display none
    height 100%
    width 100%
    position fixed
    top 0px
    left 0
    z-index 300
    padding 0px
    box-sizing border-box
    align-items center
    right 0
    margin auto
    .message-pop-content--small

        width 400px
        max-width 400px
        padding 20px 15px
        box-sizing border-box
        background white
    .message-pop-border--warning
        border 2px solid color_warning
    .message-pop-border--success
        border 2px solid color_success
    .message-pop-border--danger
        border 2px solid color_danger
    .message-pop-content
        min-height 170px
        z-index 60
        position fixed
        left  0
        right 0
        margin auto
        text-align center
        transition 0.4s ease all
        opacity 0
        top calc(50% - 170px)

        .message-pop-row
            position relative

            .message-pop-text
                margin-top 10px
                .text
                    margin-top 5px
                    margin-bottom 5px
        .message-pop-icon
            border-radius 50%
            padding 15px
            color color_white
            font-size 46px
            transition 0.6s
            transform scale(0.3)
        .message-pop-icon--danger
            background color_danger
        .message-pop-icon--success

            background color_success
        .message-pop-icon--warning

            background color_warning
.message-pop-active
    display block !important
    .message-pop-content-active
        opacity 1
        .message-pop-icon
            transform scale(1) !important
@media (max-width: 768px)
    .formBasic .table-content th
        font-size 14px
    .dataTables_wrapper .dataTables_filter
        display block
        float inherit !important
        margin-bottom 10px
@media (max-width: 480px)
    .button-group
        .btn

            font-size 13px
    .btn
        padding 8px 12px
