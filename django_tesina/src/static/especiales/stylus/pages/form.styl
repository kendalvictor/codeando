    background-image url("../img/sort_asc.png")
table.dataTable thead .sorting_desc
    background-image url("../img/sort_desc.png")
.dataTables_wrapper .dataTables_info
    font-family "roboto"
.dataTables_length
    margin-bottom 5px
    select
        height 20px
        margin-top 5px
