@import 'nib'
*
	font-family "Lato",sans-serif

html body
	font-family "Lato",sans-serif

a[href="fake-link"]
	display none

header
	width 90%
	margin auto
	.wHeader,.wHeaderResponsive
		background-color #eee
		display flex
		margin auto
		width 100%
		height 100%
		margin-top 5px
		a
			width 100%
			margin 5px
			text-align center
			&:first-child
				margin-left 0px
			&:last-child
				margin-right 0px

body.listAllProjects
	.section
		border-radius 5px
		margin-top: 5px;
		&:last-child
			margin-bottom 10px
		&.opened
			.cabecera h1
				margin 0
				font-size 36px
		.cabecera h1
			transition all ease-out .25s
			margin 0
			font-size 12px
			cursor pointer
		.panel-body
			display none

body.noHeader
	header
		display none

a
	cursor pointer !important
		
body.home
	.wGlobalContainer
		.wHomeHead
			text-align center
		.wServsContent
			display flex
			margin-top 25px
			.servItem
				border-radius 6px
				border 1px solid #ddd
				width 100%
				padding 20px
				margin 20px
				text-align center
				a
					display block
					margin-top 10px
					padding 10px
					border 1px solid #eee
					border-radius 3px
				
body.reserva
	.convItem
		margin-top 10px
		margin-bottom 10px
		border-radius 5px
		background-color #eee
		div
			line-height 34px
			padding 10px
	.userResult
		margin-top 10px
		padding 10px
	.wFormInit
		border-radius 5px
		background-clip content-box
		background-color #f5f5f5
		.form-group
			margin-top 15px
			label
				text-align right
	.wGlobalContainer
		display none
		&.active
			display block
	.wHomeHead
		text-align center
	.wCanchasContainer
		flex-wrap wrap
		display flex
		margin-top 25px
		.wCancha
			background-size cover
			background-position center
			border-radius 6px
			border 1px solid #ddd
			width 18%
			margin 1%
			padding 50px 10px
			text-align center
			cursor pointer
			p
				margin auto
				background-color rgba(0, 0, 0, 0.4)
				color white
				font-weight bold
				padding 15px 5px

			&.inactive
				pointer-events none
				opacity 0.5

@media screen and (max-width 1280px)
	body.reserva
		.wCanchasContainer
			flex-wrap wrap
			display flex
			margin-top 25px
			.wCancha
				width 23%
				margin 1%
				padding 50px 10px
				margin 1% auto

@media screen and (max-width 960px)
	body.reserva
		.wCanchasContainer
			flex-wrap wrap
			display flex
			margin-top 25px
			.wCancha
				width 31%
				margin 1.3%
				padding 50px 10px
				margin 1% auto

@media screen and (max-width 640px)
	body.reserva
		.wCanchasContainer
			flex-wrap wrap
			display flex
			margin-top 25px
			.wCancha
				width 48%
				margin 1%
				padding 60px 10px

@media screen and (max-width 360px)
	body.reserva
		.wCanchasContainer
			flex-wrap wrap
			display flex
			margin-top 25px
			.wCancha
				width 98%
				margin 1%
				padding 60px 10px
			
@media screen and (max-width 480px)
	header
		width 100%
		.wHeader,.wHeaderResponsive
			width 100%
			a, button
				margin 0
				margin-top 5px
				margin-bottom 5px
				padding 5px
				
				