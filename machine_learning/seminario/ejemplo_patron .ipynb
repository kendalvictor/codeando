    "def patron(x):\n",
    "    for i in range(2*x):\n",
    "        simbolo = \"*\" if i%2 == 0 else \"+\"\n",
    "        veces = i if i <= x else 2*x - i\n",
    "        print(simbolo*veces)\n",
    "patron(5)"
   ]
